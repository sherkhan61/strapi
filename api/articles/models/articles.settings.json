{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "articles"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "date": {
      "type": "date",
      "required": true
    },
    "link": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "category": {
      "via": "articles",
      "model": "category"
    }
  }
}
